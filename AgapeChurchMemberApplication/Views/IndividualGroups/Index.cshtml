@model IEnumerable<AgapeChurchMemberApplication.Models.IndividualGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Assign", "CreateIndividualGroups")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Individual.IndividualTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Individual.IndividualName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Individual.IndividualLastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Individual.IndividualTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Individual.IndividualName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Individual.IndividualLastName)
            </td>
            
        </tr>
    }

</table>