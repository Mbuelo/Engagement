@model AgapeChurchMemberApplication.Models.SMS

@{
    ViewBag.Title = "Index";
}

<h2>Send SMS</h2>

<div></div>
@using (Html.BeginForm("SendSMS", "SMSs", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <p>Enter Message and select reciepients</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <ul>
        @foreach (var individual in ViewBag.Individuals)
        {
            
            <li style="list-style-type:none;">
                <input type="checkbox" name="IndividualIds" value="@individual.IndividualId" />@individual.IndividualTitle @individual.IndividualName @individual.IndividualLastName
            </li>
        }
    </ul>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send Message" class="btn btn-default" />
        </div>
    </div>
</div>
}


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

